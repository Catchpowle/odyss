<div class="panel-body">
  <%= form_for @group do |f| %>
    <%= render "shared/error_messages", :target => @group %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :objective %>
      <%= f.text_area :objective, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :information %>
      <%= f.text_area :information, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :limit, "Max members" %>
      <%= f.select :limit, 6.downto(2).map { |num| [num, num] }, {}, { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= f.label :start_date %>
      <%= f.text_field :start_date, class: "form-control", data: { provide: 'datepicker' } %>
    </div>

    <%= f.submit class: "btn btn-danger" %>
  <% end %>
</div>
