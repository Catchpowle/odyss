<!DOCTYPE html>
<html>
<head>
  <title>Odyss</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="google-site-verification" content="IjLNTXIUhsVgbXKDc2hvPAtbMZPGjnPtwLPz1dCCRN8" />
</head>
  <body>
    <div id="fb-root"></div>

    <%= render "layouts/nav" %>

    <div id='main' class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %> center">
          <%= value %>
        </div>
      <% end %>

      <%= yield %>
    </div>

    <%= render 'scripts/index' %>
  </body>
</html>
